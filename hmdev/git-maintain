echo "Initialize repo"
mkdir /tmp/git-test
cd /tmp/git-test/
git init
echo "Add a file as maintainer"
touch a.txt
git add -A
GIT_COMMITTER_NAME="carnotweat" \
GIT_COMMITTER_EMAIL="847157+carnotweat@users.noreply.github.com" \
GIT_AUTHOR_NAME="xameer" \
GIT_AUTHOR_EMAIL="jasitis@gmail.com" \
  git commit --no-gpg-sign -m "add a.txt"
echo "Add a file as contributor on a topic branch"
git checkout -b topic-branch
touch b.txt
git add -A
GIT_COMMITTER_NAME="sudhakar" \
GIT_COMMITTER_EMAIL="gsudhakarmgm@protonmail.com" \
GIT_AUTHOR_NAME="sudhakar" \
GIT_AUTHOR_EMAIL="gsudhakarmgm@protonmail.com" \
  git commit --no-gpg-sign -m "add b.txt"
git show --pretty=fuller HEAD
echo "Merge topic-branch as maintainer"
git checkout master
GIT_COMMITTER_NAME="carnotweat" \
GIT_COMMITTER_EMAIL="847157+carnotweat@users.noreply.github.com" \
GIT_AUTHOR_NAME="xameer" \
GIT_AUTHOR_EMAIL="jasitis@gmail.com" \
  git merge --no-ff topic-branch
git log --pretty=fuller
